// Fuhr
function enc_DES(key, input)
	L0R0 := input^ip;
	V32 := VectorSpace(GF(2), 32);
	L := V32![ L0R0[i] : i in [1..32]];
	R := V32![ L0R0[i] : i in [33..64]];
	keys := generate_keys(key);

	for i in [1 .. 16] do
		L_old := L;
		R_old := R;
		L := R_old;
		R := L_old + inner_f(R_old, keys[i]);
    end for;

    return concatenate(R, L)^ip;
end function;

